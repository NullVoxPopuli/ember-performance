{
  "globalDependencies": [
    "pnpm-lock.yaml",
    "patches",
    ".npmrc"
  ],
  // "globalPassThroughEnv": [],
  "tasks": {
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**"],
      "inputs": [
        // native packages / modern ember
        "src/**",
        "unpublished-development-types/**",
        "addon-main.*",
        "tsconfig.json",
        "rollup.config.*",
        "babel.config.*",

        // Apps
        "app/**",
        "config/**",
        "public/**",
        "tests/**",
        "ember-cli-build.js"
      ],
      "dependsOn": ["^build"]
    },
    "fix": {
      "inputs": [],
      "outputs": [],
      "dependsOn": ["lint:prettier:fix"]
    },
    "lint:prettier:fix": {
      "outputs": [],
      "dependsOn": ["lint:js:fix", "lint:hbs:fix"]
    },
    "lint:js:fix": {
      "inputs": ["**/*.{js,json,gjs,gts,ts,cjs,mjs,cts,mts}"],
      "outputs": [],
      "dependsOn": ["lint:hbs:fix"]
    },
    "lint:hbs:fix": {
      "inputs": ["**/*.{hbs,gjs,gts}"],
      "outputs": []
    }
  }
}
